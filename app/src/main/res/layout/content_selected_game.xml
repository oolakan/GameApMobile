<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mygame.mygame.game.SelectedGameActivity"
    tools:showIn="@layout/activity_selected_game"
    android:background="@drawable/bg_messages">

    <GridView
        android:id="@+id/game_grid_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:horizontalSpacing="1dp"
        android:numColumns="10"
        android:verticalSpacing="1dp"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/layout"
        android:layout_margin="2dp"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/against_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/background_white"
            android:layout_margin="2dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:typeface="normal"
                android:text="@string/against"
                android:textSize="15sp"
                android:textStyle="normal"
                android:textColor="@color/primaryDark"
                android:paddingLeft="10dp"
                android:layout_weight="7.5"
                android:layout_gravity="start|center"
                android:gravity="start|center"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/against_no"
                android:maxLength="1"
                android:textColor="@color/primaryDark"
                android:layout_gravity="center"
                android:gravity="start|center"
                android:background="@color/transparent"
                android:textStyle="normal"
                android:layout_weight="2.5"
                android:textSize="15sp"
                android:inputType="number"
                android:hint="@string/enter_no"
                android:layout_marginLeft="10dp"
                android:paddingLeft="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/background_white"
            android:layout_margin="2dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:typeface="normal"
                android:text="@string/game_nos"
                android:textSize="15sp"
                android:textStyle="normal"
                android:textColor="@color/primaryDark"
                android:paddingLeft="10dp"
                android:layout_weight="7.5"
                android:layout_gravity="start|center"
                android:gravity="start|center"/>
           <EditText
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:id="@+id/game_nos"
               android:textColor="@color/primaryDark"
               android:layout_gravity="center"
               android:gravity="start|center"
               android:background="@color/transparent"
               android:textStyle="normal"
               android:layout_weight="2.5"
               android:textSize="15sp"
               android:hint="@string/game_nos"
               android:layout_marginLeft="10dp"
               android:paddingLeft="20dp"
               android:focusable="false"
               android:drawableRight="@android:drawable/ic_menu_close_clear_cancel"/>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/background_white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:typeface="normal"
                android:text="@string/unit_stake"
                android:textColor="@color/primaryDark"
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:textStyle="normal"
                android:layout_weight="7.5"

                android:layout_gravity="start|center"
                android:gravity="start|center"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/unit_stake"
                android:textColor="@color/primaryDark"
                android:layout_gravity="center"
                android:gravity="start|center"
                android:layout_weight="2.5"
                android:textSize="15sp"
                android:inputType="number"
                android:textStyle="normal"
                android:background="@color/transparent"
                android:hint="@string/unit_stake"
                android:layout_marginLeft="10dp"
                android:paddingLeft="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/background_white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:typeface="normal"
                android:text="@string/amount"
                android:textSize="15sp"
                android:textStyle="normal"
                android:textColor="@color/primaryDark"
                android:paddingLeft="10dp"
                android:layout_weight="7.5"
                android:layout_gravity="start|center"
                android:gravity="start|center"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/game_amount"
                android:textStyle="normal"
                android:textColor="@color/primaryDark"
                android:layout_gravity="center"
                android:gravity="start|center"
                android:layout_weight="2.5"
                android:textSize="15sp"
                android:hint="@string/amount"
                android:focusable="false"
                android:inputType="numberDecimal"
                android:layout_marginLeft="10dp"
                android:paddingLeft="20dp"
                android:background="@color/transparent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp">
            <Button
                android:id="@+id/playNewGame"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:typeface="normal"
                android:text="@string/play_more"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:background="@drawable/background_black"
                android:layout_gravity="center"
                android:layout_marginRight="1dp"
                android:textSize="17sp"
                android:gravity="center"/>
            <Button
                android:id="@+id/proceedToPlay"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:typeface="normal"
                android:text="@string/preview"
                android:textColor="@color/primaryDark"
                android:layout_weight="1"
                android:layout_marginLeft="1dp"
                android:textSize="17sp"
                android:textAllCaps="false"
                android:background="@drawable/background_colorprimary"
                android:layout_gravity="center"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
