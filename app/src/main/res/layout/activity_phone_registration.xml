<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context="com.example.mygame.mygame.auth.PhoneRegistration"
android:background="@color/primaryDark">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="100dp"
    android:id="@+id/linearLayout4">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/phone_icon"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_phone_no"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:typeface="normal"
        android:textColor="@color/white"
        android:gravity="center"
        />
    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:max="100"
        android:visibility="gone"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/primaryDark"
        android:indeterminateTint="@color/colorPrimary"
        android:layout_marginTop="-7dp"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/button_border"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:gravity="center">


        <EditText
            android:padding="5dp"
            android:id="@+id/codeNumber"
            android:layout_width="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/textBoxTextColor"
            android:textSize="20sp"
            android:text="234"
            android:maxLength="3"
            android:maxLines="7"
            android:background="@color/transparent"
            android:gravity="center"
            android:layout_gravity="center" />
        <EditText
            android:padding="5dp"
            android:id="@+id/phone_no"
            android:hint="0000000000"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textBoxTextColor"
            android:textSize="20sp"
            android:inputType="phone"
            android:maxLength="10"
            android:background="@color/transparent"
            android:textColorHint="@color/textBoxTextHintCoor"
            android:gravity="center"
            android:layout_gravity="center" />
    </LinearLayout>

</LinearLayout>

<Button
    android:id="@+id/confirm_phone"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content"
    android:background="@drawable/background_colorprimary"
    android:textColor="@color/black"
    android:textAllCaps="true"
    android:typeface="normal"
    android:textSize="20sp"
    android:text="@string/confirm_phone"
    android:layout_below="@+id/linearLayout4"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"/>

</RelativeLayout>
