<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mygame.mygame.game.PrintResultActivity"
    android:background="@drawable/bg_messages">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="false"
        android:alpha="0.1"
        android:background="@drawable/background_image" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="120dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/success_icon"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/game_printed"
            android:typeface="normal"
            android:textAllCaps="false"
            android:textColor="@color/primaryDark"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/startNewGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_colorprimary"
            android:textColor="@color/primaryDark"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="20dp"
            android:text="@string/play_game"/>
    </LinearLayout>
</RelativeLayout>
