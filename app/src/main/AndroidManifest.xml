<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mygame.mygame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".auth.LoginActivity" />
        <activity android:name=".auth.CreateAccount" />
        <activity android:name=".auth.ForgotPassword" />
        <activity android:name=".auth.PhoneRegistration" />
        <activity android:name=".auth.VerifyOtpActivity" />
        <activity
            android:name=".game.GameHomeActivity"
            android:label="@string/title_activity_game_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".game.SelectedGameActivity"
            android:label="@string/title_activity_selected_game"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>